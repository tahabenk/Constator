<div id="register-container" class="login-main">
  <div class= "row">
    <div class="col-12" style="margin-top:65px">
      <%= image_tag ("Constator-logo.png"), alt: "Constator", width: 250, class: "center" %>
    </div>
    <div class="col-8" style="margin-top:0px">
      <h2 class="login">Se connecter</h2>
    </div>
    <div class="col-12 login-fields">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <input class="form-control string email required login-input" autocomplete="email"
      placeholder="Email *" autofocus="autofocus" type="email" value="" name="user[email]" id="user_email">
      <input class="form-control password required login-input" autocomplete="current-password"
      placeholder="Mot de passe *" type="password" name="user[password]" id="user_password">
      <div class="col-12 login-input">
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
    </div>
    <div class="form-actions">
      <div class="text-center">
      <%= f.button :submit, "SE CONNECTER", class: "login-button" %>
      </div>
  </div>
  <div class= "row footer sign-in" style="margin:0px">
    <div class="col-8">
      <div class="devise-shared-links">
        <h1 class="sign-in-text">Pas de compte ?</h1>
      </div>
    </div>
    <div class="col-4 sign-in-button">
      <% end %> <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
