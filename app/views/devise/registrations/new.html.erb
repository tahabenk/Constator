  <div id="register-container" class="register-main">
      <div class= "row" style="margin-top:100px">
      <div class="col-8">
        <h2 class="create-account">Cr√©er un compte</h2>
      </div>
      <div class="col-12 register-fields">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %> <%= f.error_notification %>
          <input class="form-control string email required transparent-input" autocomplete="email" placeholder="Email *"
          autofocus="autofocus" type="email" value="" name="user[email]" id="user_email" >
          <input class="form-control string password required transparent-input" autocomplete="password" placeholder="Mot de passe *"
          autofocus="autofocus" type="password" value="" name="user[password]" id="user_password" >
          <input class="form-control password required transparent-input" autocomplete="new-password" placeholder="Confirmer le mot de passe *"
          required="required" aria-required="true" type="password" name="user[password_confirmation]" id="user_password_confirmation">
      </div>
      <div class="col-12">
        <div class="form-actions">
          <div class="text-center">
            <%= f.button :submit, "S'INSCRIRE", class: "btn-register" %>
          </div>
        </div>
      </div>
    </div>
</div>
  <div class= "row footer sign-in" style="margin:0px">
    <div class="col-7">
      <div class="devise-shared-links">
        <h1 class="sign-in-text">Vous avez un compte ?</h1>
      </div>
    </div>
    <div class="col-5 sign-in-button">
      <% end %> <%= render "devise/shared/links"%>
    </div>
  </div>
  </div>
